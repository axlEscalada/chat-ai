{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/health", "dest": "/api/health.js" },
    { "src": "/chats", "methods": ["POST"], "dest": "/api/chats.js" },
    {
      "src": "/chats/message",
      "methods": ["POST"],
      "dest": "/api/chats-message.js"
    },
    {
      "src": "/chats/(.*)",
      "methods": ["GET"],
      "dest": "/api/chat-id.js?id=$1"
    },
    {
      "src": "/sessions/(.*)/chats",
      "methods": ["GET"],
      "dest": "/api/session-chats.js?id=$1"
    },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}

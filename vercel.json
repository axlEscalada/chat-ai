{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/chat", "destination": "backend/dist/server.js" },
    { "source": "/chat/:path*", "destination": "backend/dist/server.js" },
    { "source": "/conversations", "destination": "backend/dist/server.js" },
    {
      "source": "/conversations/:path*",
      "destination": "backend/dist/server.js"
    },
    { "source": "/(.*)", "destination": "frontend/build/$1" }
  ]
}
